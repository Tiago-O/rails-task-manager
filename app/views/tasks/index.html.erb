<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>

      <h5>

        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>

         <%= link_to task.title, task_path(task) %>

     </h5>

    </li>
  <% end %>
</ul>

<h5><%= link_to 'Add a new task', new_task_path %></h5>
