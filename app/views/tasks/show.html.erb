<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p> <i class="far fa-check-square"></i> This task is completed</p>
<% else %>
  <p> <i class="far fa-square"></i> This task is not completed yet</p>
<% end %>

<h5><%= link_to 'Back to list', tasks_path %></h5>
<h5><%= link_to 'Edit', edit_task_path(@task) %></h5>
<h5><%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></h5>
